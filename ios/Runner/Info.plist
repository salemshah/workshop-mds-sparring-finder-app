<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <!-- Enables smoother animations at high refresh rates -->
        <key>CADisableMinimumFrameDurationOnPhone</key>
        <true/>

        <!-- Localization settings -->
        <key>CFBundleDevelopmentRegion</key>
        <string>$(DEVELOPMENT_LANGUAGE)</string>

        <!-- Display name under app icon -->
        <key>CFBundleDisplayName</key>
        <string>Sparring Finder</string>

        <!-- Executable binary name -->
        <key>CFBundleExecutable</key>
        <string>$(EXECUTABLE_NAME)</string>

        <!-- App bundle identifier (from Xcode settings) -->
        <key>CFBundleIdentifier</key>
        <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

        <!-- Version of the Info.plist format -->
        <key>CFBundleInfoDictionaryVersion</key>
        <string>6.0</string>

        <!-- Internal app name -->
        <key>CFBundleName</key>
        <string>sparringFinder</string>

        <!-- App type: always 'APPL' -->
        <key>CFBundlePackageType</key>
        <string>APPL</string>

        <!-- Version name shown to users -->
        <key>CFBundleShortVersionString</key>
        <string>$(FLUTTER_BUILD_NAME)</string>

        <!-- Obsolete Mac-only signature field -->
        <key>CFBundleSignature</key>
        <string>????</string>

        <!-- Internal build number -->
        <key>CFBundleVersion</key>
        <string>$(FLUTTER_BUILD_NUMBER)</string>

        <!-- Enables Firebase auto-integration -->
        <key>FirebaseAppDelegateProxyEnabled</key>
        <true/>

        <!-- Restrict to iPhone/iPad only -->
        <key>LSRequiresIPhoneOS</key>
        <true/>

        <key>NSLocationWhenInUseUsageDescription</key>
        <string>We use your location to find sparring partners near you.</string>

        <!-- Permission for camera usage -->
        <key>NSCameraUsageDescription</key>
        <string>We need access to your camera to take a profile picture.</string>

        <!-- Permission to read photo library -->
        <key>NSPhotoLibraryUsageDescription</key>
        <string>We need access to your photo library to upload your profile image.</string>

        <!-- Enables support for input like Apple Pencil -->
        <key>UIApplicationSupportsIndirectInputEvents</key>
        <true/>

        <!-- Background modes -->
        <key>UIBackgroundModes</key>
        <array>
            <string>remote-notification</string>
            <string>fetch</string>
        </array>

        <!-- Name of launch screen storyboard -->
        <key>UILaunchStoryboardName</key>
        <string>LaunchScreen</string>

        <!-- Main interface storyboard file -->
        <key>UIMainStoryboardFile</key>
        <string>Main</string>

        <!-- Restrict to portrait mode only (iPhone) -->
        <key>UISupportedInterfaceOrientations</key>
        <array>
            <string>UIInterfaceOrientationPortrait</string>
        </array>

        <!-- Restrict to portrait mode only (iPad) -->
        <key>UISupportedInterfaceOrientations~ipad</key>
        <array>
            <string>UIInterfaceOrientationPortrait</string>
        </array>
    </dict>
</plist>
